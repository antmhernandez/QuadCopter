//Each variable w, x, y, and z will correspond to rotation, side-to-side movement, front-to-back movement, and throttle, respectively.

#define VRY_PIN  A0 // Arduino pin connected to VRX pin
#define VRX_PIN  A1 // Arduino pin connected to VRY pin
#define VRW_PIN  A2 // Arduino pin connected to VRZ pin
#define VRZ_PIN  A3 // Arduino pin connected to VRW pin

//int wValue = 0;
int xValue = 0; // To store value of the X axis
int yValue = 0; // To store value of the Y axis
int zValue = 0; // To store value of the Z axis
int wValue = 0; // To store value of the W axis

void setup() {
  Serial.begin(9600) ;
}

void loop() {
  // read analog X and Y analog values
  wValue = analogRead(VRW_PIN);
  xValue = analogRead(VRX_PIN);
  yValue = analogRead(VRY_PIN);
  zValue = analogRead(VRZ_PIN);

  // print data to Serial Monitor on Arduino IDE
  Serial.print("w = ");
  Serial.print(zValue);
  Serial.print(", x = ");
  Serial.print(yValue);
  Serial.print(", y = ");
  Serial.print(xValue);
  Serial.print(", z= ");
  Serial.println(wValue);
  delay(200);
}
